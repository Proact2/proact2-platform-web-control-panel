@model Proact_WebApp.Models.CreateInstituteRequest
@{
    ViewData["Title"] = "Create new Institute";
}

<form asp-action="Create" class="form-horizontal">
    <div class="row">
        <div class="col-md-8">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">New Institute</h3>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>

                <div class="card-footer">
                    <button asp-action="Index" class="btn btn-default">Back</button>
                    <button type="submit" class="btn btn-success float-right">Create</button>
                </div>

            </div>
        </div>


    </div>

    <div class="row">

    </div>

</form>
