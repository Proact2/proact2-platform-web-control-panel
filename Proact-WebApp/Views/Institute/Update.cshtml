@model Proact_WebApp.Models.UpdateInstituteRequest
@{
    ViewData["Title"] = "Update Institute " + Model.Name;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <form asp-action="Update" class="form-horizontal">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                 
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success float-right">Update</button>
                    <button asp-action="Index" class="btn btn-default">Back</button>
                </div>
            </form>
        </div>
    </div>
</div>
