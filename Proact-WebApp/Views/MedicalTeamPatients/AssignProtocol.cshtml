@model Proact_WebApp.ViewModels.AssignProtocolToPatientViewModel
@{
    ViewData["Title"] = "Assign protocol";
}

<form asp-action="AssignProtocol" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Protocol</h3>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InternalCode"></label>
                        <input asp-for="InternalCode" class="form-control">
                        <span asp-validation-for="InternalCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InternationalCode"></label>
                        <input asp-for="InternationalCode" class="form-control">
                        <span asp-validation-for="InternationalCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImportFile"></label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" asp-for="ImportFile">
                                <label class="custom-file-label" asp-for="ImportFile">Choose file</label>
                            </div>
                        </div>
                        <span asp-validation-for="ImportFile" class="text-danger"></span>
                        <div><small>Supported files: .pdf </small></div>
                        <div><small>Max file size: 10MB </small></div>
                    </div>

                    <input type="hidden" asp-for="ProtocolId" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="MedicalTeamId" />

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success float-right">Assign protocol</button>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {

    <!-- bs-custom-file-input -->
    <script src="~/lib/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>$(function () {
            bsCustomFileInput.init();
        });</script>
}