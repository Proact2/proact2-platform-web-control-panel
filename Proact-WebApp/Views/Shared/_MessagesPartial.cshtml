@if (ViewBag.Error != null && ViewBag.Error)
{
    <div class="row">
        <div class="col-md-12">

            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @if (!string.IsNullOrEmpty(ViewBag.MessageTitle))
                {
                    <h5><i class="icon fas fa-ban"></i> @ViewBag.MessageTitle</h5>
                }

                @if (!string.IsNullOrEmpty(ViewBag.MessageBody))
                {
                    <div>@ViewBag.MessageBody</div>
                }
            </div>

        </div>
    </div>
}

@if (ViewBag.Success != null && ViewBag.Success)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @if (!string.IsNullOrEmpty(ViewBag.MessageTitle))
                {
                    <h5><i class="icon fas fa-check"></i> @ViewBag.MessageTitle</h5>
                }

                @if (!string.IsNullOrEmpty(ViewBag.MessageBody))
                {
                    <div>@ViewBag.MessageBody</div>
                }
            </div>

        </div>
    </div>

}

