@model SurveyCompiledQuestionModel
@{
    bool isTrue = false;
    try {
        bool.TryParse( Model.CompiledAnswers[0].Value, out isTrue );
    }
    catch ( Exception ) {}
}

<div class="shadow-none p-3 mb-5 bg-light rounded">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-primary disabled">
            <input type="radio" name="options" id="option_a1" autocomplete="off" checked="@(isTrue)" > True
        </label>
        <label class="btn btn-default disabled">
            <input type="radio" name="options" id="option_a2" autocomplete="off" checked="@(!isTrue)" > False
        </label>
    </div>
</div>